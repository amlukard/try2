<h1>Movie Search</h1>

<%= form_tag(search_path, method: 'get') do %>
  <%= label_tag 'query', 'Enter movie title:' %>
  <%= text_field_tag 'query', params[:query], required: true %>
  <%= submit_tag 'Search' %>
<% end %>

<div id="results">
  <% @movies.each do |movie| %>
    <div>
      <h3><%= movie.title %></h3>
      <p><%= movie.overview %></p>
    </div>
  <% end %>
</div>